<!DOCTYPE html>
<html lang="en">

<head>
	<title>LMS</title>

	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="google-signin-client_id" content="69791082698-qjmd7v54vluq11aoucqdgp2pvsmc5tjp.apps.googleusercontent.com">
  <script src="https://apis.google.com/js/platform.js" async defer></script>

	<link rel="icon" href="assets/images/favicon.ico" type="image/x-icon">
	<link rel="stylesheet" href="assets/fonts/fontawesome/css/fontawesome-all.min.css">
	<link rel="stylesheet" href="assets/plugins/animation/css/animate.min.css">
	<link rel="stylesheet" href="assets/css/style.css">
</head>

<body>

<div class="blur-bg-images"></div>
<div class="auth-wrapper">
	<div class="auth-content container">
		<div class="card">
			<div class="row align-items-center">

				<div class="col-md-6">
					<div class="card-body">

						<h2 class="mb-4">
							Library Management System
							<span style="color: #feca05;"> Login</span>
						</h2>

						<p class="mb-4">
							Lorem Ipsum is simply dummy text of the printing and typesetting industry.
						</p>

						<!-- success message -->
						<% if (typeof success !== 'undefined' && success) { %>
							<div class="alert alert-success">
								<%= success %>
							</div>
						<% } %>

						<!-- error message -->
						<% if (typeof error !== 'undefined' && error) { %>
							<div class="alert alert-danger">
								<%= error %>
							</div>
						<% } %>


						<!--  Login block -->
						<div class="toggle-block">

							<form method="POST" action="/login">

								<div class="input-group mb-2">
									<div class="input-group-prepend">
										<span class="input-group-text">
											<i class="feather icon-user"></i>
										</span>
									</div>
									<input type="text"
										   name="username"
										   value="<%= old?.username || '' %>"
										   class="form-control"
										   placeholder="User Name"
										   required>
								</div>

								<div class="input-group mb-4">
									<div class="input-group-prepend">
										<span class="input-group-text">
											<i class="feather icon-lock"></i>
										</span>
									</div>
									<input type="password"
										   name="password"
										   class="form-control"
										   placeholder="Password"
										   required>
								</div>

								<button type="submit" class="btn btn-warning mb-4 btn-block">
									LOGIN
								</button>

							</form>

							<div class="saprator"><span>OR</span></div>

							<!-- OAuth Buttons -->
							<button class="btn btn-facebook mb-2 mr-2">
								<i class="fab fa-facebook-f"></i> Facebook
							</button>

              <a href="/auth/google" class="btn btn-googleplus mb-2 mr-2">
                <i class="fab fa-google"></i> Google
              </a>


							<button class="btn btn-twitter mb-2 mr-2">
								<i class="fab fa-twitter"></i> Twitter
							</button>

							<div class="form-group text-left mt-4">
								<div class="checkbox checkbox-primary d-inline">
									<input type="checkbox" id="checkbox-fill-a1">
									<label for="checkbox-fill-a1" class="cr"> Save credentials</label>
								</div>
							</div>

							<p class="text-center mt-3">
								Don't have an account?
								<button type="button" class="btn btn-link toggle-btn p-0">
									Register
								</button>
							</p>

						</div>

						<!-- Register block -->
						<div class="toggle-block collapse">

							<form method="POST" action="/register">

								<div class="input-group mb-2">
									<input type="text"
										   name="first_name"
										   value="<%= old?.first_name || '' %>"
										   class="form-control"
										   placeholder="First Name"
										   required>
								</div>

								<div class="input-group mb-2">
									<input type="text"
										   name="middle_name"
										   value="<%= old?.middle_name || '' %>"
										   class="form-control"
										   placeholder="Middle Name">
								</div>

								<div class="input-group mb-2">
									<input type="text"
										   name="last_name"
										   value="<%= old?.last_name || '' %>"
										   class="form-control"
										   placeholder="Last Name"
										   required>
								</div>

								<div class="input-group mb-2">
									<input type="email"
										   name="email"
										   value="<%= old?.email || '' %>"
										   class="form-control"
										   placeholder="Email address"
										   required>
								</div>

								<div class="input-group mb-2">
									<input type="text"
										   name="username"
										   value="<%= old?.username || '' %>"
										   class="form-control"
										   placeholder="Username"
										   required>
								</div>

								<div class="input-group mb-3">
									<input type="password"
										   name="password"
										   class="form-control"
										   placeholder="Password"
										   required>
								</div>

								<button type="submit" class="btn btn-primary mb-4 btn-block">
									Register
								</button>

							</form>

							<p class="text-center">
								Already have an account?
								<button type="button" class="btn btn-link toggle-btn p-0">
									Login
								</button>
							</p>

						</div>

					</div>
				</div>

				<div class="col-md-6 d-none d-md-block">
					<img src="./assets/images/auth/img-auth-2.jpg"
						 alt=""
						 class="img-fluid w-100">
				</div>

			</div>
		</div>
	</div>
</div>

<!-- Required JS -->
<script src="assets/js/vendor-all.min.js"></script>
<script src="assets/plugins/bootstrap/js/bootstrap.min.js"></script>

<script>
	const activeForm = "<%= activeForm || 'login' %>";

	if (activeForm === 'register') {
		$('.toggle-block').toggle();
	}

	$('.toggle-btn').on('click', function () {
		$('.toggle-block').toggle();
	});
</script>

</body>
</html>
